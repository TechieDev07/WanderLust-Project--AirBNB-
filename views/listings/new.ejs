<% layout("/layouts/boilerplate") %> <div class="row mt-3">
    <div class="col-8 offset-2">
        <h2>Create a New Listing</h2>
        
        <div style="background:red; height:10px;" class="mb-3"></div>

        <form method="POST" action="/listings" novalidate class="needs-validation">
            
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" class="form-control" placeholder="Enter listing title" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image][url]" type="text" class="form-control" placeholder="Paste image URL">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" class="form-control" placeholder="1200" required>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" class="form-control" placeholder="Jaipur, Rajasthan" required>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add Listing</button>
        </form>
    </div>
</div>